<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ListItemHeadingStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="DetailTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="android:layout_marginStart">@dimen/text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/text_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ContentTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_marginStart">@dimen/text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/text_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AboutTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_marginBottom">@dimen/list_divider_margin</item>
        <item name="android:layout_marginStart">@dimen/text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/text_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ContentHeadingTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginStart">@dimen/text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/text_margin</item>
    </style>

    <style name="HeadingTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:layout_marginStart">@dimen/text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/text_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>