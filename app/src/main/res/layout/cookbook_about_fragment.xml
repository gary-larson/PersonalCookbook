<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".ui.CookbookAboutFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/HeadingTextView"
        android:text="@string/about_introduction" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/list_divider_margin"
        android:layout_marginBottom="@dimen/list_divider_margin"
        android:background="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/HeadingTextView"
        android:text="@string/about_instructions_opening_screen_label" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AboutTextView"
        android:text="@string/about_instructions_opening_screen_text_2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AboutTextView"
        android:text="@string/about_instructions_opening_screen_text_3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AboutTextView"
        android:text="@string/about_instructions_opening_screen_text_4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AboutTextView"
        android:text="@string/about_instructions_opening_screen_text_5" />

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        style="@style/AboutTextView"-->
<!--        android:text="@string/about_instructions_opening_screen_text_6" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/list_divider_margin"
        android:layout_marginBottom="@dimen/list_divider_margin"
        android:background="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/HeadingTextView"
        android:text="@string/about_copyright" />

</LinearLayout>