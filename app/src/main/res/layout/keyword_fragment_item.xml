<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/keyword_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_horizontal_text_margin"
        android:layout_marginTop="@dimen/list_top_text_margin"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceListItem" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/keyword_delete_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edit_icon_margin"
        android:background="@drawable/button_selector"
        android:padding="@dimen/edit_icon_padding"
        android:src="@drawable/ic_delete_24px" />
</LinearLayout>