<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.ContentFragment">

        <TextView
            style="@style/ContentHeadingTextView"
            android:text="@string/content_recipe_name"/>

        <TextView
            android:id="@+id/name_text_view"
            style="@style/ContentTextView" />

        <TextView
            style="@style/ContentHeadingTextView"
            android:text="@string/content_short_description"/>

        <TextView
            android:id="@+id/short_description_text_view"
            style="@style/ContentTextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/ContentHeadingTextView"
            android:text="@string/servings"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            style="@style/ContentHeadingTextView"
            android:text="@string/prep"
            android:layout_width="0dp"
            android:layout_weight="1" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/servings_text_view"
                style="@style/ContentTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/prep_time_text_view"
                style="@style/ContentTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/ContentHeadingTextView"
                android:text="@string/cook"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <TextView
                style="@style/ContentHeadingTextView"
                android:text="@string/total"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cook_time_text_view"
                style="@style/ContentTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/total_time_text_view"
                style="@style/ContentTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            style="@style/ContentHeadingTextView"
            android:text="@string/content_description"/>

        <TextView
            android:id="@+id/description_text_view"
            style="@style/ContentTextView" />

        <TextView
            style="@style/ContentHeadingTextView"
            android:text="@string/content_copyright" />

        <TextView
            android:id="@+id/copyright_text_view"
            style="@style/ContentTextView" />

        <TextView
            style="@style/ContentHeadingTextView"
            android:text="@string/personal_note_text" />

        <TextView
            android:id="@+id/personal_note_text_view"
            style="@style/ContentTextView" />

    </LinearLayout>
</ScrollView>