<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CookbookEditFragment">

    <EditText
        android:id="@+id/recipe_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        android:text="@string/apple_pie"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recipe_name_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        tools:context="com.larsonapps.personalcookbook.CoobookDetailsContentFragment" />

    <TextView
        android:id="@+id/ingredient_label"
        style="@style/DetailTextView"
        android:text="@string/ingredients"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        app:layout_constraintTop_toBottomOf="@id/content_container"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/reorder_ingredient_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reorder_ingredients_button_text"
        android:background="@drawable/button_background"
        android:paddingStart="@dimen/edit_button_padding"
        android:paddingEnd="@dimen/edit_button_padding"
        app:layout_constraintTop_toBottomOf="@id/ingredient_label"
        app:layout_constraintBottom_toTopOf="@id/ingredient_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/ingredient_list_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/ingredient_label"
        tools:context="com.larsonapps.personalcookbook.IngredientFragment" />

    <Button
        android:id="@+id/add_ingredient_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_ingredient_button_text"
        android:background="@drawable/button_background"
        android:paddingStart="@dimen/edit_button_padding"
        android:paddingEnd="@dimen/edit_button_padding"
        app:layout_constraintTop_toBottomOf="@id/ingredient_list_container"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/step_label"
        style="@style/DetailTextView"
        android:text="@string/steps"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        app:layout_constraintTop_toBottomOf="@id/add_ingredient_button"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/reorder_step_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reorder_steps_button_text"
        android:background="@drawable/button_background"
        android:paddingStart="@dimen/edit_button_padding"
        android:paddingEnd="@dimen/edit_button_padding"
        app:layout_constraintTop_toBottomOf="@id/step_label"
        app:layout_constraintBottom_toTopOf="@id/step_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/step_list_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:context="com.larsonapps.personalcookbook.StepFragment"
        app:layout_constraintTop_toBottomOf="@id/step_label"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/add_step_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_step_button_text"
        android:background="@drawable/button_background"
        android:paddingStart="@dimen/edit_button_padding"
        android:paddingEnd="@dimen/edit_button_padding"
        app:layout_constraintTop_toBottomOf="@id/step_list_container"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/image_label"
        style="@style/DetailTextView"
        android:text="@string/images"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        app:layout_constraintTop_toBottomOf="@id/add_step_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image_list_container"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/image_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:context="com.larsonapps.personalcookbook.ImageFragment"
        app:layout_constraintTop_toBottomOf="@id/image_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_image_button"/>

    <Button
        android:id="@+id/add_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_image_button_text"
        android:background="@drawable/button_background"
        android:paddingStart="@dimen/edit_button_padding"
        android:paddingEnd="@dimen/edit_button_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>